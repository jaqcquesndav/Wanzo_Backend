{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Wanzobe Backend Monorepo",
  "files": [],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/customer-sync" },
    { "path": "./packages/shared" },
    { "path": "./packages/tsconfig" }
  ],
  "compilerOptions": {
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@wanzobe/customer-sync": ["packages/customer-sync/src"],
      "@wanzobe/customer-sync/*": ["packages/customer-sync/src/*"],
      "@wanzobe/shared": ["packages/shared/src"],
      "@wanzobe/shared/*": ["packages/shared/src/*"],
      "@wanzobe/types": ["packages/types"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./packages/types"
    ]
  }
}
