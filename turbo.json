{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "src/**/*.js", "src/**/*.py", "test/**", "tests/**", "**/*.test.*", "**/*.spec.*"]
    }
  }
}