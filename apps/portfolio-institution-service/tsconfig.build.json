{
  "extends": "../../packages/tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@wanzobe/shared": ["../../packages/shared/src"],
      "@wanzobe/shared/*": ["../../packages/shared/src/*"],
      "@wanzobe/customer-sync": ["../../packages/customer-sync/src"],
      "@wanzobe/customer-sync/*": ["../../packages/customer-sync/src/*"],
      "@wanzobe/types": ["../../packages/types"]
    },
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "../../packages/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/hapi*", "**/*hapi*", "**/@types/hapi*"]
}
