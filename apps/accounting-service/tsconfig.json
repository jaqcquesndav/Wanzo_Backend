{
  "extends": "../../packages/tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@wanzobe/shared/*": ["../../packages/shared/*"],
      "@wanzobe/types": ["../../packages/types"]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "../../packages/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}