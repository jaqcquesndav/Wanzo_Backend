{
	"name": "@wanzo/payment-service",
	"version": "0.1.0",
	"description": "Centralized payment service integrating SerdiPay and extensible to Stripe/PayPal/etc.",
	"author": "Wanzo Team",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build:docker": "echo \"Bypassing build for Docker\" && mkdir -p dist && echo \"console.log('Payment mock running')\" > dist/main.js",
		"build": "nest build -p tsconfig.json",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start -p tsconfig.json",
		"start:dev": "nest start -p tsconfig.json --watch",
		"start:debug": "nest start -p tsconfig.json --debug --watch",
		"start:prod": "node dist/main.js",
		"dev": "nest build -p tsconfig.json && node dist/main.js",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest --config ./jest.config.js --passWithNoTests"
	},
	"dependencies": {
		"@nestjs/axios": "^3.0.2",
		"@nestjs/common": "^10.0.0",
		"@nestjs/config": "^3.1.1",
		"@nestjs/core": "^10.0.0",
		"@nestjs/microservices": "^10.0.0",
		"@nestjs/platform-express": "^10.0.0",
		"@nestjs/swagger": "^7.1.16",
		"@nestjs/typeorm": "^10.0.1",
		"axios": "^1.7.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"kafkajs": "^2.2.4",
		"pg": "^8.11.3",
		"prom-client": "^15.1.3",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1",
		"swagger-ui-express": "^4.6.3",
		"typeorm": "^0.3.17",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@types/express": "^4.17.17",
		"@types/node": "^20.19.4",
		"dotenv": "^17.0.1",
		"eslint": "^8.42.0",
		"jest": "^29.7.0",
		"prettier": "^3.0.0",
		"supertest": "^6.3.4",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3"
	}
}
