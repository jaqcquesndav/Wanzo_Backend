{
  "extends": "../../packages/tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@wanzobe/shared": ["../../packages/shared/src"],
      "@wanzobe/shared/*": ["../../packages/shared/src/*"],
      "@wanzobe/customer-sync": ["../../packages/customer-sync/src"],
      "@wanzobe/customer-sync/*": ["../../packages/customer-sync/src/*"],
      "@wanzobe/types": ["../../packages/types"]
    },
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "target": "ES2020"
  },
  "include": ["src/**/*", "globals.d.ts", "../../packages/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
