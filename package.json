{
  "name": "@wanzobe/backend",
  "private": true,
  "version": "1.0.0",
  "description": "Wanzobe Backend - Microservices Architecture with Yarn Workspaces",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "start:gateway": "yarn workspace @wanzobe/api-gateway start",
    "dev:gateway": "yarn workspace @wanzobe/api-gateway dev"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
