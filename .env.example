# Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration for Adha AI Assistant
# Get your key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration
POSTGRES_DB=wanzo_db
POSTGRES_USER=wanzo_user
POSTGRES_PASSWORD=your-secure-password

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=https://api.your-domain.com
AUTH0_M2M_CLIENT_ID=your-auth0-m2m-client-id
AUTH0_M2M_CLIENT_SECRET=your-auth0-m2m-client-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-key

# Kafka Configuration
KAFKA_BROKER=localhost:9092

# Service URLs
ACCOUNTING_SERVICE_URL=http://localhost:3002
GESTION_COMMERCIALE_SERVICE_URL=http://localhost:3005
PORTFOLIO_INSTITUTION_SERVICE_URL=http://localhost:3006
CUSTOMER_SERVICE_URL=http://localhost:3003
ADMIN_SERVICE_URL=http://localhost:3001

# Service Authentication
SERVICE_SECRET=your-service-to-service-secret
